doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        link(href="/css/app.css" rel="stylesheet" type="text/css")
    body
        include common/_header
        section(id="main")
            h1 メッセージを変更
            form(action="/update/" + msg._id method="POST" encType="multipart/form-data")
                input(type="hidden" name="_csrf" value=csrf)
                textarea(placeholder="メッセージ" name="message" id="textarea-message") msg.message
                input(type="file" name="image" id="input-file")
                button(type="submit" id="submit-button") 送信
        include common/_footer